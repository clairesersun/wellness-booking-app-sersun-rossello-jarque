                <p class="daily-schedule-item daily-schedule-item-time">{{time}}</p>
                <div class="daily-schedule-item daily-schedule-item-2">
                    <p class="daily-schedule-name">{{name}}</p>
                    <p class="daily-schedule-location">{{location}}</p>
                </div>
                <a src="{{!-- got to detial for given post --}}" class="daily-schedule-item daily-schedule-item-btn"><button class="action-btn">Details</button></a>
                <div class="daily-schedule-div"></div>
            </div>
            {{/each}}
            <div class="divider"></div>
            <div class="bottom-align">
            <img src="" class="img-classes">    {{!-- ask for this --}}
            <button class="classes-btn-clicked"> Classes </button>
            <a scr="{{!-- go to schedule page --}}"><button class="schedule-btn">Schedule</button></a>
        </div>
        </main>
    </div>
